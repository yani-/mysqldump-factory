# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space

# PHP
[*.php]
indent_style = space
indent_size = 4
max_line_length = 85

# YAML
[*.yml]
indent_style = space
indent_size = 4

# XML
[*.xml]
indent_style = space
indent_size = 4
